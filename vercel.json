{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "@next-public-app-url",
    "NEXT_PUBLIC_API_URL": "@next-public-api-url",
    "EVE_CLIENT_ID": "@eve-client-id",
    "EVE_SECRET_KEY": "@eve-secret-key",
    "EVE_CALLBACK_URL": "@eve-callback-url",
    "DATABASE_URL": "@database-url",
    "JWT_SECRET": "@jwt-secret",
    "ADMIN_CHARACTER_IDS": "@admin-character-ids"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,POST,PUT,DELETE,OPTIONS,PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-mail",
      "schedule": "*/15 * * * *"
    }
  ]
}
